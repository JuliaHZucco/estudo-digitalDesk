@model Modelo.Discente.Academico

@{
    ViewData["Title"] = "Detalhes do Acadêmico";
    Layout = "_LayoutIES";
}

<div class="card shadow-sm">
    <div class="card-header text-white bg-info text-center py-3">
        <h1 class="mb-0">Detalhes do Acadêmico</h1>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                @if (Model.Foto != null && Model.Foto.Length > 0)
                {
                    <div class="text-center mb-4">
                        <img src="data:@Model.FotoMimeType;base64,@Convert.ToBase64String(Model.Foto)"
                             alt="Foto do acadêmico @Model.Nome"
                             class="img-thumbnail rounded-circle"
                             style="max-width: 200px; max-height: 200px;" />
                    </div>
                }
                else
                {
                    <div class="text-center mb-4">
                        <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center"
                             style="width: 200px; height: 200px;">
                            <i class="fas fa-user fa-5x text-white"></i>
                        </div>
                        <p class="text-muted mt-2">Sem foto cadastrada</p>
                    </div>
                }

                <dl class="row">
                    <dt class="col-sm-4 fw-bold text-muted">ID:</dt>
                    <dd class="col-sm-8 fs-5">@Html.DisplayFor(model => model.AcademicoID)</dd>

                    <dt class="col-sm-4 fw-bold text-muted">Registro Acadêmico:</dt>
                    <dd class="col-sm-8 fs-5 fw-bold text-primary">@Html.DisplayFor(model => model.RegistroAcademico)</dd>

                    <dt class="col-sm-4 fw-bold text-muted">Nome:</dt>
                    <dd class="col-sm-8 fs-4 fw-bold text-primary">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-4 fw-bold text-muted">Data de Nascimento:</dt>
                    <dd class="col-sm-8 fs-5">@Html.DisplayFor(model => model.Nascimento)</dd>

                    @if (!string.IsNullOrEmpty(Model.FotoMimeType))
                    {
                        <dt class="col-sm-4 fw-bold text-muted">Tipo da Foto:</dt>
                        <dd class="col-sm-8 fs-6 text-muted">@Model.FotoMimeType</dd>
                    }
                </dl>

                <hr class="my-4">

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-action="Edit" asp-route-id="@Model.AcademicoID" class="btn btn-warning btn-lg me-md-2">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.AcademicoID" class="btn btn-danger btn-lg me-md-2">
                        <i class="fas fa-trash"></i> Excluir
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-list"></i> Voltar à Lista
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer bg-light text-center text-muted">
        <small>Informações detalhadas do acadêmico selecionado</small>
    </div>
</div>