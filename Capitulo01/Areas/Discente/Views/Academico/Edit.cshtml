@model Modelo.Discente.Academico

@{
    ViewData["Title"] = "Editar Acadêmico";
    Layout = "_LayoutIES";
}

<div class="card-block">
    <div class="card-header text-white bg-secondary text-center h1">
        Alterando um acadêmico existente
    </div>

    <div class="card-body">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <h5>Erros encontrados:</h5>
                <ul>
                    @foreach (var modelError in ViewData.ModelState)
                    {
                        foreach (var error in modelError.Value.Errors)
                        {
                            <li><strong>@modelError.Key:</strong> @error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        <form enctype="multipart/form-data" asp-action="Edit" method="post">
            <input type="hidden" asp-for="AcademicoID" />

            <div class="row">
                <div class="col-8">
                    <div class="form-group">
                        <label asp-for="RegistroAcademico" class="control-label"></label>
                        <input asp-for="RegistroAcademico" class="form-control" />
                        <span asp-validation-for="RegistroAcademico" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nascimento" class="control-label"></label>
                        <input asp-for="Nascimento" class="form-control" type="date" />
                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Nova Foto (Opcional)</label>
                        <input type="file" name="foto" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">Selecione uma nova imagem para substituir a atual</small>
                    </div>
                </div>

                <div class="col-4">
                    @if (Model.Foto != null && Model.Foto.Length > 0)
                    {
                        <div class="text-center">
                            <p><strong>Foto Atual:</strong></p>
                            <img src="@Url.Action("GetFoto", "Academico", new { id = Model.AcademicoID })"
                                 alt="Foto atual"
                                 style="max-width: 200px; max-height: 200px;"
                                 class="img-thumbnail" />

                            <div class="checkbox mt-2">
                                <label>
                                    <input type="checkbox" name="chkRemoverFoto" value="Sim"> Remover Foto
                                </label>
                                <input type="hidden" name="chkRemoverFoto" value="Nao"> 
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="fa fa-user fa-3x"></i>
                            <p>Sem foto</p>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group text-center h3 mt-4">
                <input type="submit" value="Atualizar Acadêmico" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Retornar à listagem de acadêmicos</a>
            </div>
        </form>
    </div>

    <div class="card-footer bg-info text-center text-white">
        Informe os dados acima e/ou clique em um dos botões de ação
    </div>
</div>

@section ScriptPage {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}