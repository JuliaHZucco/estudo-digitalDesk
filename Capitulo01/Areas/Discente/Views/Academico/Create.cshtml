@model Modelo.Discente.Academico

@{
    ViewData["Title"] = "Cadastrar Acadêmico";
    Layout = "_LayoutIES";
}

<div class="card shadow-sm">
    <div class="card-header text-white bg-success text-center py-3">
        <h1 class="mb-0">Cadastrar Novo Acadêmico</h1>
    </div>

    <div class="card-body">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger border-danger" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-circle fa-2x text-danger me-3"></i>
                    <div>
                        <h5 class="alert-heading">Erros encontrados:</h5>
                        <div asp-validation-summary="All" class="text-danger mb-0"></div>
                    </div>
                </div>
            </div>
        }

        <form enctype="multipart/form-data" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="form-group mb-3">
                        <label asp-for="RegistroAcademico" class="form-label fw-bold">Registro Acadêmico:</label>
                        <input asp-for="RegistroAcademico" class="form-control form-control-lg" placeholder="Digite o registro acadêmico" />
                        <span asp-validation-for="RegistroAcademico" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">Nome Completo:</label>
                        <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite o nome completo do acadêmico" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Nascimento" class="form-label fw-bold">Data de Nascimento:</label>
                        <input asp-for="Nascimento" class="form-control form-control-lg" type="date" />
                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label fw-bold">Foto do Acadêmico:</label>
                        <input type="file" name="foto" class="form-control form-control-lg" accept="image/*" />
                        <div class="form-text">
                            <i class="fas fa-info-circle text-info"></i>
                            Selecione uma imagem (JPG, PNG, etc.) - <strong>Opcional</strong>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button type="submit" class="btn btn-success btn-lg me-md-2">
                            <i class="fas fa-save"></i> Cadastrar Acadêmico
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Voltar à Lista
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="card-footer bg-light text-center text-muted">
        <small>Preencha os dados do acadêmico. A foto é opcional</small>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}