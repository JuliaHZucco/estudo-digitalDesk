@model IEnumerable<Modelo.Docente.CursoProfessor>
@{
    ViewData["Title"] = "Últimos Registros";
    Layout = "_LayoutIES";
}

<div class="card-block">
    <div class="card-header text-white bg-info text-center h1">
        Últimos Registros de Professores em Cursos
    </div>

    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Curso ID</th>
                        <th>Nome do Curso</th>
                        <th>Professor ID</th>
                        <th>Nome do Professor</th>
                        <th>Data do Registro</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CursoID)</td>
                            <td>@Html.DisplayFor(modelItem => item.Curso.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.ProfessorID)</td>
                            <td>@Html.DisplayFor(modelItem => item.Professor.Nome)</td>
                            <td>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center" role="alert">
                <h4 class="alert-heading">Nenhum registro encontrado!</h4>
                <p>Não há registros de professores adicionados a cursos na sessão atual.</p>
                <hr>
                <p class="mb-0">Utilize o botão abaixo para adicionar um professor a um curso.</p>
            </div>
        }
    </div>

    <div class="card-footer bg-dark text-center">
        <a asp-action="AdicionarProfessor" class="btn btn-primary">
            <i class="fas fa-plus"></i> Adicionar Professor ao Curso
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-list"></i> Voltar para Lista de Professores
        </a>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-info">
            <i class="fas fa-home"></i> Retornar ao Menu Principal
        </a>
    </div>
</div>