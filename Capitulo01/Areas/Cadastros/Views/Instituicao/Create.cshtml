@model Capitulo01.Modelo.Cadastros.Instituicao

@{
    ViewData["Title"] = "Cadastrar Instituição";
    Layout = "_LayoutIES";
}

<div class="card shadow-sm">
    <div class="card-header text-white bg-success text-center py-3">
        <h1 class="mb-0">Cadastrar Nova Instituição</h1>
    </div>

    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">Nome da Instituição:</label>
                        <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite o nome da instituição" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Endereco" class="form-label fw-bold">Endereço:</label>
                        <textarea asp-for="Endereco" class="form-control" rows="3" placeholder="Digite o endereço completo da instituição"></textarea>
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button type="submit" class="btn btn-success btn-lg me-md-2">
                            <i class="fas fa-save"></i> Cadastrar Instituição
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Voltar à Lista
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="card-footer bg-light text-center text-muted">
        <small>Preencha os dados da instituição para cadastrá-la no sistema</small>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}