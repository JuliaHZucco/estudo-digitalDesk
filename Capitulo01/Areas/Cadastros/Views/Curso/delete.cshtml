@model Capitulo01.Modelo.Cadastros.Curso

@{
    ViewData["Title"] = "Excluir Curso";
    Layout = "_LayoutIES";
}

<div class="card-block">
    <div class="card-header text-white bg-danger text-center h1">
        Tem certeza que deseja excluir este curso?
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CursoID)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CursoID)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt class="col-sm-3">
                Departamento
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Departamento.Nome)
            </dd>

            <dt class="col-sm-3">
                Instituição
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Departamento.Instituicao.Nome)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CursoID" />
            <div class="form-group text-center h3">
                <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <div class="card-footer bg-warning text-center text-dark">
        <strong>Atenção:</strong> Esta ação não pode ser desfeita!
    </div>
</div>