@model Capitulo01.Modelo.Cadastros.Curso

@{
    ViewData["Title"] = "Editar Curso";
    Layout = "_LayoutIES";
}

<div class="card shadow-sm">
    <div class="card-header text-white bg-warning text-center py-3">
        <h1 class="mb-0">Editar Curso</h1>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CursoID" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="form-group mb-3">
                        <label class="form-label text-muted">ID do Curso:</label>
                        <input value="@Model.CursoID" class="form-control" readonly disabled />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">Nome do Curso:</label>
                        <input asp-for="Nome" class="form-control form-control-lg" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="DepartamentoID" class="form-label fw-bold">Departamento:</label>
                        <select asp-for="DepartamentoID" class="form-control form-select-lg" asp-items="ViewBag.Departamentos">
                        </select>
                        <span asp-validation-for="DepartamentoID" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button type="submit" class="btn btn-warning btn-lg me-md-2">
                            <i class="fas fa-save"></i> Salvar Alterações
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.CursoID" class="btn btn-info btn-lg me-md-2">
                            <i class="fas fa-eye"></i> Ver Detalhes
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Voltar à Lista
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="card-footer bg-light text-center text-muted">
        <small>Modifique os dados do curso e clique em "Salvar Alterações"</small>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}