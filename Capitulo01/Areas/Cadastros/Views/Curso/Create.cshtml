@model Capitulo01.Modelo.Cadastros.Curso

@{
    ViewData["Title"] = "Criar Curso";
    Layout = "_LayoutIES";
}

<div class="card shadow-sm">
    <div class="card-header text-white bg-success text-center py-3">
        <h1 class="mb-0">Cadastrar Novo Curso</h1>
    </div>

    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label fw-bold">Nome do Curso:</label>
                        <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite o nome do curso" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="DepartamentoID" class="form-label fw-bold">Departamento:</label>
                        <select asp-for="DepartamentoID" class="form-control form-select-lg" asp-items="ViewBag.Departamentos">
                            <option value="">Selecione um departamento</option>
                        </select>
                        <span asp-validation-for="DepartamentoID" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button type="submit" class="btn btn-success btn-lg me-md-2">
                            <i class="fas fa-save"></i> Cadastrar Curso
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Voltar à Lista
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="card-footer bg-dark text-center text-white">
        Informe os dados acima e/ou clique em um dos botões de ação
    </div>
</div>

@section ScriptPage {
    <script>
        $(document).ready(function() {
            console.log("View Create carregada");


            $('form').on('submit', function(e) {
                console.log("Form enviado!");
                console.log("Nome:", $('#Nome').val());
                console.log("DepartamentoID:", $('#DepartamentoID').val());


                var nome = $('#Nome').val().trim();
                var departamentoId = $('#DepartamentoID').val();

                if (!nome) {
                    alert('Por favor, informe o nome do curso.');
                    e.preventDefault();
                    return false;
                }

                if (!departamentoId || departamentoId == '') {
                    alert('Por favor, selecione um departamento.');
                    e.preventDefault();
                    return false;
                }

                console.log("Validação passou, enviando form...");
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}