@model Capitulo01.Modelo.Cadastros.Curso

@{
    ViewData["Title"] = "Detalhes do Curso";
    Layout = "_LayoutIES";
}

<div class="card shadow-sm">
    <div class="card-header text-white bg-info text-center py-3">
        <h1 class="mb-0">Detalhes do Curso</h1>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <dl class="row">
                    <dt class="col-sm-3 fw-bold text-muted">ID:</dt>
                    <dd class="col-sm-9 fs-5">@Html.DisplayFor(model => model.CursoID)</dd>

                    <dt class="col-sm-3 fw-bold text-muted">Nome:</dt>
                    <dd class="col-sm-9 fs-4 fw-bold text-primary">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3 fw-bold text-muted">Departamento:</dt>
                    <dd class="col-sm-9 fs-5">@Html.DisplayFor(model => model.Departamento.Nome)</dd>

                    <dt class="col-sm-3 fw-bold text-muted">Instituição:</dt>
                    <dd class="col-sm-9 fs-5">@Html.DisplayFor(model => model.Departamento.Instituicao.Nome)</dd>
                </dl>

                <hr class="my-4">

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-action="Edit" asp-route-id="@Model.CursoID" class="btn btn-warning btn-lg me-md-2">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.CursoID" class="btn btn-danger btn-lg me-md-2">
                        <i class="fas fa-trash"></i> Excluir
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-list"></i> Voltar à Lista
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer bg-light text-center text-muted">
        <small>Informações detalhadas do curso selecionado</small>
    </div>
</div>