@model Capitulo01.Models.Cadastros.Departamento;

@{
    ViewData["Title"] = "Deletar Departamento";
    Layout = "_LayoutIES";
}

<h3>Tem certeza que deseja deletar este departamento?</h3>

<div class="card mt-3">
    <div class="card-header bg-danger text-white">
        Departamento
    </div>
    <div class="card-body">
        @{
            await Html.RenderPartialAsync("~/Areas/Cadastros/Views/Departamento/_PartialDetailsContentCard.cshtml", Model);
        }

        <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalConfirmationDelete">
            Deletar Departamento
        </button>
    </div>
</div>

<div class="modal fade" id="modalConfirmationDelete" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.DepartamentoID" />
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmação de Remoção</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    Deseja realmente deletar o departamento <strong>@Model.Nome</strong>?
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Sim, remover</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>