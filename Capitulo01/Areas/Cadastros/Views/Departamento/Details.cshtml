@model Capitulo01.Models.Cadastros.Departamento;

@{
    ViewData["Title"] = "Detalhes do Departamento";
    Layout = "_LayoutIES";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/font-awesome/css/all.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
    </environment>
}

<div class="card mt-3">
    <div class="card-header bg-secondary text-white text-center h4">
        Departamento
    </div>

    @{
        await Html.RenderPartialAsync("~/Areas/Cadastros/Views/Departamento/_PartialDetailsContentCard.cshtml", Model);
    }

    <div class="card-footer text-center bg-info text-white">
        <a asp-action="Edit" asp-route-id="@Model.DepartamentoID" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-info">Voltar à lista</a>
    </div>
</div>

