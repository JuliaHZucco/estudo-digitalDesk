@model IEnumerable<Capitulo01.Modelo.Cadastros.Departamento>

@{
    ViewData["Title"] = "Departamentos";
    Layout = "_LayoutIES";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header text-white bg-primary text-center py-3">
        <h1 class="mb-0">Departamentos Registrados</h1>
    </div>

    <div class="card-body p-0">
        <div class="d-flex justify-content-start p-3 bg-light">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Criar Novo Departamento
            </a>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="fw-bold">Nome</th>
                            <th class="fw-bold">Instituição</th>
                            <th class="fw-bold text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td class="align-middle">@Html.DisplayFor(modelItem => item.Instituicao.Nome)</td>
                                <td class="text-center align-middle">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.DepartamentoID" class="btn btn-primary btn-sm">
                                            Editar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.DepartamentoID" class="btn btn-info btn-sm">
                                            Detalhes
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.DepartamentoID" class="btn btn-danger btn-sm">
                                            Remover
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info m-3" role="alert">
                <h4 class="alert-heading">Nenhum departamento encontrado!</h4>
                <p>Não há departamentos cadastrados no sistema.</p>
                <hr>
                <p class="mb-0">Use o botão acima para cadastrar o primeiro departamento.</p>
            </div>
        }
    </div>
</div>