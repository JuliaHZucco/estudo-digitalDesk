@model Capitulo01.Models.Departamento

@{
    ViewData["Title"] = "Editar Departamento";
    Layout = "_LayoutIES";
}

<h3>Editar Departamento</h3>

<div class="card mt-3">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="DepartamentoID" />

            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="InstituicaoID">Instituição</label>
                <select asp-for="InstituicaoID" class="form-control" asp-items="ViewBag.Instituicoes"></select>
                <span asp-validation-for="InstituicaoID" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Salvar Alterações</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section ScriptPage {
    <partial name="_ValidationScriptsPartial" />
}



