@model Capitulo01.Models.Departamento

@{
    ViewData["Title"] = "Editar Departamento";
    Layout = "_LayoutIES";
}

<div class="card mt-3">
    <div class="card-header bg-warning text-white text-center h4">
        Editar Departamento
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="DepartamentoID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="InstituicaoID" class="control-label"></label>
                <select asp-for="InstituicaoID" class="form-control"
                        asp-items="@(ViewBag.Instituicoes)">
                </select>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Voltar à lista</a>
            </div>
        </form>
    </div>
</div>

@section ScriptPage {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



