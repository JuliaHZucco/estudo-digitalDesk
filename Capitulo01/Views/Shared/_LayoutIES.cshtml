<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Meu Projeto</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand text-white" asp-controller="Home" asp-action="Index" asp-area="">Sistema IES</a>

            <div class="navbar-nav ms-auto">
                @if (User.Identity!.IsAuthenticated)
                {
                    <span class="navbar-text text-white me-3">
                        Olá, @User.Identity.Name
                    </span>
                    <form asp-controller="Infra" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-light btn-sm">Sair</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-light btn-sm me-2" asp-controller="Infra" asp-action="Login">Entrar</a>
                    <a class="btn btn-light btn-sm" asp-controller="Infra" asp-action="Register">Cadastrar</a>
                }
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 80px;">
        <div class="row">
            @if (User.Identity!.IsAuthenticated)
            {
                <div class="col-3">
                    <nav class="nav flex-column bg-transparent" style="margin-left:40px;">
                        <a class="nav-item nav-link" asp-area="Cadastros" asp-controller="Instituicao" asp-action="Index">
                            <img src="~/images/university.png" width="30" height="30" alt="Universidade">
                            Instituições
                        </a>

                        <a class="nav-item nav-link" asp-area="Cadastros" asp-controller="Departamento" asp-action="Index">
                            <img src="~/images/department.png" width="30" height="30" alt="Departamento">
                            Departamentos
                        </a>

                        <a class="nav-item nav-link" asp-area="Cadastros" asp-controller="Curso" asp-action="Index">
                            <img src="~/images/curso.png" width="30" height="30" alt="Cursos">
                            Cursos
                        </a>

                        <a class="nav-item nav-link" asp-area="Discente" asp-controller="Academico" asp-action="Index">
                            <img src="~/images/academico.png" width="30" height="30" alt="Acadêmicos">
                            Acadêmicos
                        </a>

                        <a class="nav-item nav-link" asp-area="Docente" asp-controller="Professor" asp-action="Index">
                            <img src="~/images/professor.png" width="30" height="30" alt="Professores">
                            Professores
                        </a>
                    </nav>
                </div>
                <div class="col-9">
                    @RenderBody()
                </div>
            }
            else
            {
                <div class="col-12">
                    @RenderBody()
                </div>
            }
        </div>
    </div>

    <nav class="navbar fixed-bottom" style="background-color: #e3f2fd; margin-top:20px;">
        <a class="navbar-brand" href="#">Projeto Júlia Zucco</a>
    </nav>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
    @RenderSection("ScriptPage", required: false)
</body>
</html>