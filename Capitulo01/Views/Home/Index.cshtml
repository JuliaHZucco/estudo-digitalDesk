@{
    ViewData["Title"] = "Projeto - ASP.NET Core MVC";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="jumbotron bg-primary text-white text-center p-5 rounded mb-4">
                <h1 class="display-4">
                    <i class="fas fa-graduation-cap"></i>
                    Sistema de Gerenciamento IES
                </h1>
                <p class="lead">
                    Plataforma completa para gerenciamento de instituições de ensino superior
                </p>
                <hr class="my-4">
                <p class="mb-4">
                    Gerencie instituições, departamentos e acadêmicos de forma integrada e eficiente
                </p>

                @if (!User.Identity!.IsAuthenticated)
                {
                    <div class="btn-group" role="group">
                        <a class="btn btn-light btn-lg me-3" asp-controller="Infra" asp-action="Login">
                            <i class="fas fa-sign-in-alt"></i> Fazer Login
                        </a>
                        <a class="btn btn-outline-light btn-lg" asp-controller="Infra" asp-action="Register">
                            <i class="fas fa-user-plus"></i> Criar Conta
                        </a>
                    </div>
                }
                else
                {
                    <div class="btn-group" role="group">
                        <a class="btn btn-light btn-lg me-3" asp-area="Cadastros" asp-controller="Instituicao" asp-action="Index">
                            <i class="fas fa-university"></i> Acessar Sistema
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    @if (!User.Identity!.IsAuthenticated)
    {
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-university fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Instituições</h5>
                        <p class="card-text">Gerencie informações de instituições de ensino superior.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-building fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Departamentos</h5>
                        <p class="card-text">Organize departamentos e suas respectivas áreas de conhecimento.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-user-graduate fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Acadêmicos</h5>
                        <p class="card-text">Controle o cadastro e informações dos estudantes.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12 text-center">
                <div class="alert alert-info" role="alert">
                    <h5 class="alert-heading">
                        <i class="fas fa-info-circle"></i>
                        Acesso Restrito
                    </h5>
                    <p>
                        Para acessar o sistema completo, é necessário fazer login ou criar uma conta.
                    </p>
                    <hr>
                    <p class="mb-0">
                        <strong>Conta de teste:</strong> admin@ies.edu.br | Senha: Admin123!
                    </p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-success" role="alert">
                    <h5 class="alert-heading">
                        <i class="fas fa-check-circle"></i>
                        Bem-vindo, @User.Identity.Name!
                    </h5>
                    <p class="mb-0">
                        Use o menu lateral para navegar pelas funcionalidades do sistema.
                    </p>
                </div>
            </div>
        </div>
    }
</div>